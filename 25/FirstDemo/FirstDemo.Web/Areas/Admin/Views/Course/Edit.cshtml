@model CourseEditModel
@{
    ViewData["Title"] = "Edit a Course";
    ViewData["PageNav"] = "Edit Course";
}

<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
            <h3 class="card-title">Edit Course Form</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form role="form" asp-controller="Course" asp-action="Edit" method="post" asp-antiforgery="true" >
                <input type="hidden" asp-for="Id" />
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" asp-for="Title" id="title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="fees">Fees</label>
                        <input type="text" class="form-control" asp-for="Fees" id="fees">
                        <span asp-validation-for="Fees" class="text-danger"></span>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <a asp-action="Index" asp-controller="Course" asp-area="Admin" class="btn btn-default">Cancel</a>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <!-- /.card -->
        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</div><!-- /.container-fluid -->

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}